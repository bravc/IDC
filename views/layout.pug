    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js', integrity='sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa', crossorigin='anonymous')

  body
    nav.navbar.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Welcome
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/') Home
          ul.nav.navbar-nav.navbar-right
            if user
              li 
                a(href='/chat') Live Chat
              li
                  a(href='/users/registered') View Users
              li
                .dropdown
                  button.btn.dropdown-toggle(role='button', 
                    style="margin: 10px 10px" data-toggle='dropdown', 
                    aria-haspopup='true',aria-expanded='true')=user.name + "  "
                      if user.profilePic
                        img.img-circle(src=user.profilePic, height='15px', width='15px')
                      else
                        i.fa.fa-user-circle(aria-hidden='true')
                  ul.dropdown-menu
                    li
                      a(href="/users/profile/" + user.id) View Profile
                    li
                      a(href="/users/logout") Logout


            else
              li
                a(href='/users/login') Login
    .container
      != messages('message', locals)
      block content
      br
      hr
      footer
        p Copyright &copy; 2017
    script(src='/js/main.js')  

