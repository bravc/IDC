  body
    nav.navbar.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Welcome
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/') Home
          ul.nav.navbar-nav.navbar-right
            if user
              li
                .dropdown.show
                  button#dropdownMenuLink.btn.btn-secondary.btn-group.dropdown-toggle(role='button', 
                    style="margin: 10px 10px" data-toggle='dropdown', 
                    aria-haspopup='true',aria-expanded='true')=user.name + "  "
                      i.fa.fa-user-circle(aria-hidden='true')
                  ul.dropdown-menu
                    li
                      a(href="/users/profile/" + user.id) View Profile
                    li
                      a(href="users/logout") Logout

            else
              li
                a(href='/users/login') Login
    .container
      != messages('message', locals)
      block content
      br
      hr
      footer
        p Copyright &copy; 2017
